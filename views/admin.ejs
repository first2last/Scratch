<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .form-control,
        .btn {
            border-radius: 10px;
        }

        .section-title {
            font-weight: 600;
            margin-bottom: 20px;
        }

        .divider {
            border-bottom: 1px solid #ddd;
            margin-bottom: 2rem;
        }
    </style>
</head>

<body class="bg-dark text-white">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">Admin Panel.</a>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Products</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Cart</a></li>
                <li class="nav-item"><a class="nav-link" href="#">My account</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container py-4">
        <div class="row">

            <!-- Sidebar -->
            <div class="col-md-3 mb-4">
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action active">All Products</a>
                    <a href="#" class="list-group-item list-group-item-action">Create New Product</a>
                </div>
            </div>



            <!-- Create Product Form -->
            <div class="col-md-9">

                <% if (success && success.length> 0) { %>
                    <div class="flash-message success-flash">
                        <%= success[0] %>
                    </div>
                    <% } %>

                       
                <h3 class="section-title">Create New Product</h3>
                <div class="divider"></div>

                <form action="/products/create" method="post" enctype="multipart/form-data">
                    <!-- Product Details -->
                    <h5 class="mb-3">Product Details</h5>
                    <div class="mb-3">
                        <label for="productImage" class="form-label">Product Image</label><br />
                        <input type="file" id="productImage" name="image" class="form-control" />
                    </div>
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="name" placeholder="Product Name" />
                        </div>
                        <div class="col-md-3">
                            <input type="number" class="form-control" name="price" placeholder="Product Price" />
                        </div>
                        <div class="col-md-3">
                            <input type="number" class="form-control" name="discount" placeholder="Discount Price" />
                        </div>
                    </div>

                    <!-- Panel Details -->
                    <h5 class="mb-3">Panel Details</h5>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="bgColor" placeholder="Background Color" />
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="panelColor" placeholder="Panel Color" />
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="textColor" placeholder="Text Color" />
                        </div>
                    </div>

                    <div class="text-start mt-4">
                        <button type="submit" class="btn btn-success px-4 py-2">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>

</html>