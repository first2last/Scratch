<!-- views/product.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= product.name %> - FurFrnd</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: #f8f9fa;
      color: #333;
    }
    .product-image {
      height: 400px;
      object-fit: cover;
      width: 100%;
      border-radius: 8px;
    }
    .buy-button {
      background: linear-gradient(45deg, #2AA8A8, #FF6B6B);
      border: none;
      color: white;
      padding: 10px 20px;
      font-weight: 600;
      border-radius: 8px;
      transition: transform 0.2s ease;
    }
    .buy-button:hover {
      transform: scale(1.05);
    }
  </style>
</head>
<body>
  <div class="container my-5">
    <!-- Product Image -->
    <img src="data:image/png;base64,<%= product.image.toString('base64') %>" class="product-image mb-4" alt="<%= product.name %>" />
    
    <!-- Product Details -->
    <h2><%= product.name %></h2>
    <p><strong>Price:</strong> â‚¹ <%= product.price %></p>
    <p><strong>Discount:</strong> <%= product.discount %></p>
    <p><strong>Background Color:</strong> <%= product.bgcolor %></p>
    <p><strong>Panel Color:</strong> <%= product.panelcolor %></p>
    <p><strong>Text Color:</strong> <%= product.textcolor %></p>
    
    <!-- More details can be added here -->
    
    <!-- Buy Now / Adopt Now Button -->
    <a href="/cart/add/<%= product._id %>" class="buy-button">Buy Now</a>
  </div>
</body>
</html>
