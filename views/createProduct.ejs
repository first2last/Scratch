<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #141e30, #243b55);
            color: #f1f1f1;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background-color: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .navbar-brand {
            color: #fff;
        }

        .navbar-nav .nav-link {
            color: #ddd !important;
            transition: 0.3s;
        }

        .navbar-nav .nav-link:hover {
            color: #fff !important;
        }

        .list-group-item {
            background: transparent;
            color: #fff;
            border: none;
            font-weight: 500;
        }

        .list-group-item.active,
        .list-group-item:hover {
            background: linear-gradient(45deg, #0d6efd, #6610f2);
            border-radius: 8px;
            color: #fff;
        }

        .form-card {
            background: rgba(255, 255, 255, 0.05);
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(15px);
        }

        .form-control {
            background-color: rgba(255, 255, 255, 0.07);
            color: #fff;
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 12px;
        }

        .form-control::placeholder {
            color: #bbb;
        }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        .btn-glow {
            background: linear-gradient(135deg, #00c9ff, #92fe9d);
            color: #000;
            font-weight: 600;
            border: none;
            border-radius: 12px;
            padding: 10px 24px;
            transition: all 0.3s ease;
            box-shadow: 0 0 10px #00c9ff70, 0 0 20px #92fe9d70;
        }

        .btn-glow:hover {
            box-shadow: 0 0 15px #00c9ff, 0 0 30px #92fe9d;
            transform: scale(1.05);
        }

        h3,
        h5 {
            color: #fff;
        }

        .divider {
            height: 2px;
            background: linear-gradient(to right, #0d6efd, #6610f2);
            border-radius: 10px;
            margin-bottom: 20px;
        }

        label {
            font-weight: 500;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">Admin Panel</a>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="/admin">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/shop">Products</a></li>
                <li class="nav-item"><a class="nav-link" href="/shop/cart">Cart</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container py-5">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 mb-4">
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action active">All Products</a>
                    <a href="#" class="list-group-item list-group-item-action">Create New Product</a>
                </div>
            </div>

            <!-- Form -->
            <div class="col-md-9">
                <% if (success && success.length> 0) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= success[0] %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>

                        <div class="form-card">
                            <h3>Create New Product</h3>
                            <div class="divider"></div>

                            <form action="/admin/create" method="post" enctype="multipart/form-data">
                                <!-- Product Details -->
                                <h5 class="mb-3">Product Details</h5>
                                <div class="mb-3">
                                    <label for="productImage" class="form-label">Product Image</label>
                                    <input type="file" id="productImage" name="image" class="form-control" />
                                </div>

                                <div class="row g-3 mb-4">
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" name="name"
                                            placeholder="Product Name" />
                                    </div>
                                    <div class="col-md-3">
                                        <input type="number" class="form-control" name="price"
                                            placeholder="Product Price" />
                                    </div>
                                    <div class="col-md-3">
                                        <input type="number" class="form-control" name="discount"
                                            placeholder="Discount Price" />
                                    </div>
                                </div>

                                <!-- Panel Details -->
                                <!-- Panel Details -->
                                <h5 class="mb-3">Panel Details</h5>
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" name="bgcolor"
                                            placeholder="Background Color" />
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" name="panelcolor"
                                            placeholder="Panel Color" />
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" name="textcolor"
                                            placeholder="Text Color" />
                                    </div>
                                </div>

                                <div class="text-start mt-4">
                                    <button type="submit" class="btn-glow">Submit</button>
                                </div>
                            </form>
                        </div>
            </div>
        </div>
    </div>

</body>

</html>