    <script>
        // Dog details data array (match order with carousel slides)
        const dogDetails = [
            {
                name: "Jimmy German-Shepherd",
                age: "12 weeks",
                vaccinations: "Complete",
                size: "Medium (25-35 kg)",
                traits: ["Family-friendly", "High Energy", "Easy Training"],
                price: "‚Çπ45,000"
            },
            {
                name: "Bella - Beagle",
                age: "16 weeks",
                vaccinations: "Pending Rabies",
                size: "Small (10-15 kg)",
                traits: ["Gentle", "Playful", "Low Maintenance"],
                price: "‚Çπ32,000"
            },
            {
                name: "Lily - Golden Retriever",
                age: "14 weeks",
                vaccinations: "Complete",
                size: "Large (30-40 kg)",
                traits: ["Intelligent", "Loyal", "Great with Kids"],
                price: "‚Çπ55,000"
            }
        ];

        // Update details when carousel slides
        document.getElementById('carouselDogs').addEventListener('slide.bs.carousel', event => {
            const activeIndex = [...event.target.querySelectorAll('.carousel-item')].indexOf(event.relatedTarget);
            updateDogDetails(activeIndex);
        });

        // Initial update on page load
        document.addEventListener('DOMContentLoaded', () => {
            updateDogDetails(0);
        });

        function updateDogDetails(index) {
            const dog = dogDetails[index];
            document.getElementById('breed-name').textContent = dog.name;
            document.getElementById('breed-age').innerHTML = `<strong>Age:</strong> ${dog.age}`;
            document.getElementById('breed-vaccinations').innerHTML = `<strong>Vaccinations:</strong> ${dog.vaccinations}`;
            document.getElementById('breed-size').innerHTML = `<strong>Size:</strong> ${dog.size}`;
            document.getElementById('breed-price').textContent = dog.price;

            const traitsContainer = document.getElementById('breed-traits');
            traitsContainer.innerHTML = dog.traits.map(trait =>
                `<li class="list-inline-item badge bg-info me-1 mb-1">${trait}</li>`
            ).join('');
        }

    </script>
